{% include 'partials/header.njk' %}

    <article class="h-entry">
        <h1 class="p-name {{ "mb-1" if desc }}">{{ title }}</h1>
        {% if desc %}<p class="p-summary lead muted mb-2"><em>{{ desc }}</em></p>{% endif %}
        <div class="split">
            <div class="pr-2 pb-3">
                <p class="mugshot-container rounded"><img src="/assets/img/axel.jpg" class="img-grayscale" alt="Hi"></p>
                <p class="muted"><i class="i-calendar mr-half"></i><time class="dt-published" datetime="{{ date }}">{{ date  | readableDate }}</time></p>
            </div>
            <div class="e-content">{{ content | safe }}</div>
        </div>
    </article>

    <div class="split">
        <div></div>
        <div class="content-webmentions mt-4 pt-4 btop"></div>
    </div>
        
{% include 'partials/footer.njk' %}